<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; Dashboard</h1>
  </header>

  <div class="well">
    <%= link_to 'All Products', [:admin, :products], class: 'btn btn-info' %>
    <%= link_to 'All Categories', [:admin, :categories], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products center-align">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product Qty</th>
          <th colspan="2">Category Qty</th>
        </tr>
      </thead>
      <tbody>
        <td colspan="2"><%= @product_count %></td>
        <td colspan="2"><%= @category_count %></td>
      </tbody>
    </table>
  </div>
</section>